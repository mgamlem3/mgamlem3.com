{
	"name": "mgamlem3.com",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "github.com/mgamlem3/mgamlem3.com",
	"author": "Michael Gamlem III",
	"license": "MIT",
	"private": false,
	"scripts": {
		"dev": "webpack serve",
		"prebuild": "yarn prettier-check && yarn eslint && yarn stylelint-check",
		"build": "rm -rf dist && webpack --mode production --config webpack.prod.config.js && webpack --mode production --config webpack.server.config.js",
		"test": "yarn prettier-check; yarn build",
		"start": "node ./dist/server.*.wp.js",
		"prettier": "prettier --config ./.prettierrc --ignore-path  ./.prettierignore --write \"**/*.ts*\" \"**/*.js\" \"**/*.scss\" \"*.json\" \"*.md\"",
		"prettier-check": "prettier --list-different \"{*.js, *.md,./{src}/**/*.ts?(x)}\"",
		"lint": "yarn prettier; yarn eslint; yarn stylelint",
		"eslint": "eslint '*/**/*.{js,ts,tsx}'",
		"stylelint": "stylelint --config ./.stylelintrc --fix \"**/*.scss\" --color --cache",
		"stylelint-check": "stylelint --config ./.stylelintrc \"**/*.scss\" --color --cache",
		"storybook": "start-storybook -p 6006 --no-dll",
		"build-storybook": "build-storybook --no-dll",
		"snapshot": "build-storybook && percy-storybook --widths=320,1280"
	},
	"browsersList": [
		"last 2 versions",
		"not dead",
		"> 0.2%"
	],
	"dependencies": {
		"express": "^4.17.1",
		"express-validator": "^6.8.0",
		"fs": "^0.0.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.1.2"
	},
	"devDependencies": {
		"@babel/core": "^7.12.8",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-react": "^7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@percy/storybook": "^3.3.1",
		"@storybook/addon-actions": "^6.1.4",
		"@storybook/addon-essentials": "^6.1.4",
		"@storybook/addon-links": "^6.1.4",
		"@storybook/preset-scss": "^1.0.3",
		"@storybook/react": "^6.1.4",
		"@types/express": "^4.17.9",
		"@types/node": "^14.14.9",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router": "^5.1.8",
		"@types/react-router-dom": "^5.1.4",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"@webpack-cli/serve": "^1.1.0",
		"babel-loader": "^8.2.1",
		"compression-webpack-plugin": "^6.1.1",
		"css-loader": "^5.0.1",
		"eslint": "^7.14.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.3",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.4.1",
		"mini-css-extract-plugin": "^1.3.1",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"path": "^0.12.7",
		"prettier": "^2.2.0",
		"react-is": "^17.0.1",
		"sass": "^1.29.0",
		"sass-loader": "^10.1.0",
		"style-loader": "^2.0.0",
		"stylelint": "^13.8.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-prettier": "^1.1.2",
		"terser-webpack-plugin": "^4.2.3",
		"typescript": "^4.1.2",
		"webpack": "^4.44.2",
		"webpack-cli": "^4.2.0",
		"webpack-dev-server": "^3.11.0",
		"webpack-node-externals": "^2.5.2"
	}
}
